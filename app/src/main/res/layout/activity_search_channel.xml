<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/relativeLayout2">
        <FrameLayout
            android:id="@+id/frameImgBackSearch"
            android:layout_width="@dimen/size_recyclerview"
            android:layout_height="@dimen/size_recyclerview"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/size_image"
                android:layout_height="@dimen/size_image"
                android:src="@drawable/img_back"
                android:layout_gravity="center"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/imgSearchChannel"
            android:layout_width="@dimen/size_recyclerview"
            android:layout_height="@dimen/size_recyclerview"
            android:layout_toRightOf="@+id/frameImgBackSearch"
            android:background="@drawable/search"/>
        <EditText
            android:id="@+id/editSearchChannel"
            android:layout_toRightOf="@+id/imgSearchChannel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Press key words"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textColorHint="@color/white"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycSearchChannel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>